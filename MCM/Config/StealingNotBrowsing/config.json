{
    "$schema": "https://raw.githubusercontent.com/Exit-9B/MCM-Helper/main/docs/config.schema.json",
    "modName": "StealingNotBrowsing",
    "displayName": "Stealing, Not Browsing",
    "minMcmVersion": 13,                
    "pluginRequirements": ["StealingNotBrowsing.esp"],        
    "cursorFillMode": "topToBottom",
    "content": [
        {
            "text": "$Header_text",
            "type": "header"
        },
          {
            "type": "empty"
          },
          {
            "id": "fMinCap:Caps",
            "type": "slider",
            "text": "$Min_Time_Text",
            "help": "$Min_Time_Help",
            "valueOptions": {
                "sourceType": "ModSettingFloat",
                "min": 1.0,
                "max": 20.0,
                "step": 0.1,
                "defaultValue": 2.0,
                "formatString": "{2} sec"            
            }
        },
        {
          "id": "fMaxCap:Caps",
          "type": "slider",
          "text": "$Max_Time_Text",
          "help": "$Max_Time_Help",
          "valueOptions": {
              "sourceType": "ModSettingFloat",
              "min": 10.0,
              "max": 60.0,
              "step": 0.1,
              "defaultValue": 20.0,
              "formatString": "{2} sec"               
          }
      },
      {
        "id": "fModifier:Caps",
        "type": "slider",
        "text": "$Modifier_Text",
        "help": "$Modifier_Help",
        "valueOptions": {
            "sourceType": "ModSettingFloat",
            "min": 1.0,
            "max": 50.0,
            "step": 0.1,
            "defaultValue": 2.0,
            "formatString": "{2}"               
        }
    },
    {
        "type": "empty"
      },
      {
        "type": "empty"
      },
      {
        "text": "$Debug_Header",
        "type": "header"
    },
    {
        "id": "bEnableDebug:Debug",
        "type": "toggle",
        "text": "$Debug_Text",
        "help": "$Debug_Help",
        "valueOptions": {
            "sourceType": "ModSettingBool",
            "defaultValue": false
          
        }
    }
        
          
          
        ]                  

}